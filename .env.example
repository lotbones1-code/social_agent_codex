# X Influencer Bot - Environment Configuration
# This file has been copied from .env.example
# Edit the values below as needed

# ============================================================================
# OPENAI SETTINGS (Optional but Recommended)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Without this, the bot uses simple caption templates (still works!)
OPENAI_API_KEY=sk-your-openai-api-key-here
GPT_CAPTION_MODEL=gpt-4o-mini

# ============================================================================
# BROWSER & AUTHENTICATION
# ============================================================================
# Browser visibility (false = visible, true = hidden)
HEADLESS=false

# Where to save X login session
AUTH_FILE=auth.json

# ============================================================================
# CONTENT DISCOVERY
# ============================================================================
# Topics to search for videos (comma-separated)
# Start with topics you're interested in and that perform well
SEARCH_TOPICS=ai,automation,technology

# Pull from X trending topics?
TRENDING_ENABLED=true
TRENDING_MAX_TOPICS=6
TRENDING_REFRESH_MINUTES=45

# Max videos to process per topic
MAX_VIDEOS_PER_TOPIC=2

# ============================================================================
# POSTING LIMITS (IMPORTANT FOR SAFETY)
# ============================================================================
# Maximum posts per bot cycle
MAX_POSTS_PER_CYCLE=2

# Hard limit: maximum posts in 24 hours
MAX_POSTS_PER_24H=10

# Don't repost the same video within X hours
DUPLICATE_CHECK_HOURS=72

# ============================================================================
# CAPTION SETTINGS
# ============================================================================
# Fallback caption template (used if OpenAI fails or isn't configured)
# Available: {summary}
# DO NOT use {author} - it adds source tags!
CAPTION_TEMPLATE={summary}

# ============================================================================
# CYCLE & TIMING
# ============================================================================
# Seconds to wait between full bot cycles
LOOP_DELAY_SECONDS=300

# Delay between individual actions (randomized)
ACTION_DELAY_MIN=6
ACTION_DELAY_MAX=16

# ============================================================================
# DRY-RUN MODE (Test Without Posting)
# ============================================================================
# Set to 'true' to test the bot without actually posting to X
# Perfect for testing scraping, downloads, and caption generation
# RECOMMENDED: Start with dry_run=true to test everything first!
DRY_RUN=true

# ============================================================================
# GROWTH & ENGAGEMENT (Optional)
# ============================================================================
# Engagement actions per cycle (likes, retweets, follows)
GROWTH_ACTIONS_PER_CYCLE=3

# Auto-replies to mentions per cycle
AUTO_REPLIES_PER_CYCLE=2
AUTO_REPLY_TEMPLATE=Thanks for the mention! ðŸš€

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================
# Enable verbose debug logging
DEBUG=false

# Download directory for videos
DOWNLOAD_DIR=downloads

# Post history log file (for duplicate detection)
POST_LOG=post_history.json

# User agent for video downloads (optional)
# DOWNLOAD_USER_AGENT=Mozilla/5.0 ...

# ============================================================================
# STRICT MODE
# ============================================================================
# Enforce strict posting limits?
STRICT_MODE=true
