# Topics to monitor. Comma or "||" separated both work.
# Example:
# SEARCH_TOPICS="AI automation, growth hacking, product launches"
SEARCH_TOPICS=

# Keywords that make a tweet more relevant.
RELEVANT_KEYWORDS=ai, automation, growth, systems

# Keywords that should be treated as spam / ignored.
SPAM_KEYWORDS=giveaway, airdrop, pump, casino, xxx, nsfw

MIN_TWEET_LENGTH=40
MIN_KEYWORD_MATCHES=1
MAX_REPLIES_PER_TOPIC=3

ACTION_DELAY_MIN_SECONDS=20
ACTION_DELAY_MAX_SECONDS=40
LOOP_DELAY_SECONDS=120

# Run with a visible browser (false) or headless (true)
HEADLESS=false

# Extra logging
DEBUG=false

# Optional: DM support (not required)
ENABLE_DMS=false

# X credentials (only if you want auto-login; otherwise login manually once in the profile)
X_USERNAME=
X_PASSWORD=

# Persistent browser profile directory
PW_PROFILE_DIR=.pwprofile

# Your link + reply templates
REFERRAL_LINK=
REPLY_TEMPLATES=Been riffing with other builders about {topic}, and this {focus} breakdown keeps delivering wins. Passing along the shortcut: {ref_link}||Every time {topic} comes up, I send people this {focus} playbook: {ref_link}

# Registry file for tracking replied tweets (optional)
MESSAGE_REGISTRY_PATH=logs/replied.json

