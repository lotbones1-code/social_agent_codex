# Run the Playwright browser headless (true) or visible (false)
HEADLESS=true
# Enable verbose debug logging
DEBUG=false
# Topics to monitor on X, separated by commas or pipes
SEARCH_TOPICS=AI automation, growth hacking, product launches
# Keywords that make a tweet relevant
RELEVANT_KEYWORDS=ai, automation, systems
# Keywords that should be treated as spam
SPAM_KEYWORDS=giveaway, airdrop, pump, casino, xxx, nsfw
# Minimum tweet length to consider
MIN_TWEET_LENGTH=40
# Minimum keyword matches required
MIN_KEYWORD_MATCHES=1
# Maximum replies per topic in a single pass (increased for better reach)
MAX_REPLIES_PER_TOPIC=12
# Minimum seconds to wait between actions
ACTION_DELAY_MIN_SECONDS=20
# Maximum seconds to wait between actions
ACTION_DELAY_MAX_SECONDS=40
# Seconds to wait between topic loops (10 minutes)
LOOP_DELAY_SECONDS=600
# Optional referral or offer link injected into replies
REFERRAL_LINK=https://example.com/your-offer
# Pipe-separated reply templates using {topic}, {focus}, {ref_link}
REPLY_TEMPLATES=Been riffing with other builders about {topic}, and this {focus} breakdown keeps delivering wins. Shortcut link: {ref_link}|Every time {topic} comes up, I point people to this {focus} playbook: {ref_link}
# Enable DM outreach workflows
ENABLE_DMS=false
# Pipe-separated DM templates (optional)
DM_TEMPLATES=Hey there! Loved your thoughts on {topic}. Want the full breakdown? {ref_link}|Appreciate the insights on {topic}! Here's a resource I keep handy: {ref_link}
# Minimum DM interest score before sending
DM_INTEREST_THRESHOLD=3.2
# Weight applied to question detection for DMs
DM_QUESTION_WEIGHT=0.75
# Video provider to use (none or replicate)
VIDEO_PROVIDER=none
# Model identifier for the chosen video provider
VIDEO_MODEL=
# X username for automated login (leave blank to log in manually once)
X_USERNAME=your_x_username_here
# X password for automated login (leave blank to log in manually once)
X_PASSWORD=your_x_password_here
# Persistent Playwright profile directory
PW_PROFILE_DIR=.pwprofile
# Replicate API token required when VIDEO_PROVIDER=replicate
REPLICATE_API_TOKEN=
# OpenAI API key for AI-powered reply generation (CRITICAL - REQUIRED for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
# Image provider for generating reply images (openai, none)
IMAGE_PROVIDER=openai
# Image attachment rate (0.0-1.0) - percentage of replies that get images
IMAGE_ATTACH_RATE=0.5
