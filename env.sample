# Copy this file to .env and adjust values for your deployment.
# Fields marked with <> must be populated with your own credentials.

SEARCH_TOPICS="AI automation, growth hacking, product launches"
RELEVANT_KEYWORDS="ai, automation, workflow, systems, launch, founder, growth"
SPAM_KEYWORDS="giveaway, airdrop, pump, casino, xxx, nsfw"
REFERRAL_LINK="https://example.com/my-referral"

# Optional legacy aliases recognised by the agent
USERNAME=""
PASSWORD=""

X_USERNAME="<set-your-x-username>"
X_PASSWORD="<set-your-x-password>"

REPLY_TEMPLATES="Appreciate this perspective on {topic}! I've been leaning on an AI automation/browser stack that's been a huge unlock — happy to share the setup: {ref_link}||Love how you broke this down. My AI automation/browser stack has been doing wonders here; full breakdown if you want it: {ref_link}"
DM_TEMPLATES="Loved your thoughts on {topic}! Been running an AI automation/browser stack to keep things moving fast — can send the full playbook if you're curious: {ref_link}||Your points about {focus} really resonated. I've been using an AI automation/browser stack to handle that workload; happy to share what I'm running: {ref_link}"

HEADLESS="false"
ENABLE_DMS="true"
DEBUG="false"

MIN_TWEET_LENGTH=70
MIN_KEYWORD_MATCHES=1
MAX_REPLIES_PER_TOPIC=3
DM_TRIGGER_LENGTH=220
DM_QUESTION_WEIGHT=0.7
DM_INTEREST_THRESHOLD=3.0
ACTION_DELAY_MIN_SECONDS=60
ACTION_DELAY_MAX_SECONDS=600
LOOP_DELAY_SECONDS=900

MESSAGE_REGISTRY_PATH="logs/messaged_users.json"
PW_PROFILE_DIR=".pwprofile"

# Optional external providers
OPENAI_API_KEY=""

VIDEO_PROVIDER="none"
REPLICATE_API_TOKEN=""
VIDEO_MODEL=""
VIDEO_DURATION_SECONDS=8
