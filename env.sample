# Copy to .env and tweak to your liking. No login credentials required.

# Core behavior
HEADLESS=1
DEBUG=0
STRICT_MODE=1
REQUIRE_TRENDING=0

# Paths
AUTH_FILE="auth.json"
USER_DATA_DIR=".pwprofile"
DOWNLOAD_DIR="downloads"

# Topics + captions
SEARCH_TOPICS="ai automation, viral tech, creator tools"
CAPTION_TEMPLATE="{summary}\n#AI #Automation"
MAX_VIDEOS_PER_TOPIC=2
MAX_POSTS_PER_CYCLE=2
MIN_VIRAL_SCORE=0.25

# Timing
ACTION_DELAY_MIN=6
ACTION_DELAY_MAX=16
LOOP_DELAY_SECONDS=300

# Trending
TRENDING_ENABLED=1
TRENDING_MAX_TOPICS=6
TRENDING_REFRESH_MINUTES=45

# AI captioning (optional)
OPENAI_API_KEY=""
GPT_CAPTION_MODEL="gpt-4o-mini"

# Downloads
DOWNLOAD_USER_AGENT=""
UPLOAD_RETRY_ATTEMPTS=3
POST_RETRY_ATTEMPTS=3
