# Copy this file to .env and update values for your account.
# Topics accept comma or "||" separators; both are supported.
SEARCH_TOPICS="AI automation, growth hacking, product launches"

# Keywords also accept comma or "||" separators; they are compared in lowercase.
RELEVANT_KEYWORDS="ai, automation, growth, product"
SPAM_KEYWORDS="giveaway||airdrop||pump||casino||xxx||nsfw"

# Optional link used inside the default outreach message.
REFERRAL_LINK="https://example.com/my-referral"

# Provide X credentials if you want the bot to log in automatically.
X_USERNAME=""
X_PASSWORD=""

# Optional custom reply templates. Use {topic}, {focus}, and {ref_link} placeholders.
REPLY_TEMPLATES="Love this take on {topic}! I've been automating the heavy lifting with an AI stack: {ref_link}||Appreciate your insights on {focus}. My automation stack has been a game changer â€” happy to share: {ref_link}"

# Behaviour toggles
HEADLESS=False
ENABLE_DMS="false"
DEBUG="false"

# Timing controls (promo mode)
ACTION_DELAY_MIN=20
ACTION_DELAY_MAX=40
LOOP_DELAY_SECONDS=120
MAX_REPLIES_PER_TOPIC=3
MIN_TWEET_LENGTH=40
MIN_KEYWORD_MATCHES=1

# Storage paths
MESSAGE_REGISTRY_PATH="logs/messaged_users.json"
PW_PROFILE_DIR=".pwprofile"
AUTH_FILE="auth.json"  # Playwright storage_state saved after first manual login

# Influencer mode toggles
INFLUENCER_MODE=0
STRICT_MODE=1  # set to 0 for short delays during testing
INFLUENCER_POSTS_MIN=4
INFLUENCER_POSTS_MAX=7
INFLUENCER_DELAY_MIN_SECONDS=7200
INFLUENCER_DELAY_MAX_SECONDS=25200
INFLUENCER_CANDIDATE_CAP=30
INFLUENCER_INBOX_DIR="media/influencer_inbox"
INFLUENCER_POSTED_DIR="media/influencer_posted"
INFLUENCER_CAPTION_TEMPLATE="{summary}\n\nðŸ”¥ via {author} | #{topic} #viral #fyp #trending"
INFLUENCER_REPLY_TARGETS="elonmusk"
INFLUENCER_REPLIES_PER_TARGET=1
INFLUENCER_REPLY_DELAY_MIN_SECONDS=300
INFLUENCER_REPLY_DELAY_MAX_SECONDS=900
