# ============================================================================
# SOCIAL AGENT CODEX - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# MODE SELECTION
# ----------------------------------------------------------------------------

# INFLUENCER_MODE: 0 = Promo/Engagement Mode | 1 = Video Influencer Mode
INFLUENCER_MODE=0

# STRICT_MODE: 1 = Production (real delays) | 0 = Testing (fast delays)
STRICT_MODE=1

# ----------------------------------------------------------------------------
# AUTHENTICATION
# ----------------------------------------------------------------------------

X_USERNAME=your_twitter_username
X_PASSWORD=your_twitter_password

# Optional: Alternative ID for additional verification prompts
# X_ALT_ID=your_email_or_phone

# Auth file location (stores session cookies)
AUTH_FILE=auth.json

# ----------------------------------------------------------------------------
# BROWSER SETTINGS
# ----------------------------------------------------------------------------

# Run browser in headless mode (no visible window)
HEADLESS=true

# Enable debug logging
DEBUG=false

# ----------------------------------------------------------------------------
# INFLUENCER MODE SETTINGS (when INFLUENCER_MODE=1)
# ----------------------------------------------------------------------------

# Number of video posts per day (random between min and max)
INFLUENCER_POSTS_PER_DAY_MIN=4
INFLUENCER_POSTS_PER_DAY_MAX=7

# Topics to search for videos (pipe-separated)
INFLUENCER_VIDEO_TOPICS=AI||tech||startup||business||productivity

# Big accounts to auto-reply to (optional, comma-separated handles)
# Example: INFLUENCER_REPLY_TARGETS=elonmusk,naval,paulg
INFLUENCER_REPLY_TARGETS=

# Number of replies per target account
INFLUENCER_REPLIES_PER_TARGET=2

# OpenAI API settings for caption/reply generation
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ----------------------------------------------------------------------------
# PROMO MODE SETTINGS (when INFLUENCER_MODE=0)
# ----------------------------------------------------------------------------

# Topics to search for engagement opportunities
SEARCH_TOPICS=AI automation||growth hacking||product launches

# Keywords that make a tweet relevant
RELEVANT_KEYWORDS=AI||automation||growth||launch||community||creator economy

# Keywords that indicate spam (skip these tweets)
SPAM_KEYWORDS=giveaway||airdrop||pump||casino||xxx||nsfw

# Your referral/product link
REFERRAL_LINK=https://example.com/my-referral

# Reply templates (use {topic}, {focus}, {ref_link} placeholders)
REPLY_TEMPLATES=Been riffing with other builders about {topic}, and this {focus} breakdown keeps delivering wins. Shortcut link: {ref_link}||Every time {topic} comes up, I point people to this {focus} playbook: {ref_link}

# Tweet filtering
MIN_TWEET_LENGTH=60
MIN_KEYWORD_MATCHES=1
MAX_REPLIES_PER_TOPIC=3

# Timing (seconds)
ACTION_DELAY_MIN_SECONDS=60
ACTION_DELAY_MAX_SECONDS=600
LOOP_DELAY_SECONDS=900

# ----------------------------------------------------------------------------
# DM SETTINGS (Promo mode - NOT YET IMPLEMENTED)
# ----------------------------------------------------------------------------

ENABLE_DMS=false
DM_TEMPLATES=
DM_TRIGGER_LENGTH=220
DM_QUESTION_WEIGHT=0.75
DM_INTEREST_THRESHOLD=3.2

# ----------------------------------------------------------------------------
# VIDEO GENERATION (Optional - for creating videos, not posting)
# ----------------------------------------------------------------------------

VIDEO_PROVIDER=none
VIDEO_MODEL=pika-labs/pika-1.0
VIDEO_DURATION_SECONDS=8
REPLICATE_API_TOKEN=

# ----------------------------------------------------------------------------
# ADVANCED
# ----------------------------------------------------------------------------

MESSAGE_REGISTRY_PATH=logs/messaged_users.json
TRENDING_HASHTAG_URL=
HASHTAG_REFRESH_MINUTES=45
